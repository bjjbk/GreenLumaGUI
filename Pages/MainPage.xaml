<Page x:Class="GreenLumaGUI.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GreenLumaGUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5 0" HorizontalAlignment="Right">
            <Button Name="SettingsBtn" Width="35" Height="35" Margin="5 0" Style="{StaticResource RoundedButtonStyle}" Click="SettingsBtn_Click">
                <Image Source="/Resources/Icons/settings.ico" MaxWidth="25" MaxHeight="25"/>
            </Button>
        </StackPanel>
        <Button Name="TestBtn" Width="100" Content="test" Click="TestBtn_Click"/>
    </Grid>
</Page>
